<h1>Post de usuarios</h1>

<%= link_to 'Nuevo post', new_post_path %>

<table>
  <tr>
    <th>Post</th>
    <th>Usuario</th>
    <th>Acci√≥n</th>
    <th colspan="4"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td> 
      <td><%= post.user.name %></td>
      <td><%= link_to 'Mostrar', post_path(post) %></td>
